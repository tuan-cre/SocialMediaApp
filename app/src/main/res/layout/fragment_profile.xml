<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintHeight_max="300px"
    app:layout_constraintWidth_max="300px">

    <ImageView
        android:id="@+id/imgProfilePicture"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:maxWidth="300px"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/FullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:text="Full Name" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="20px"
        android:background="@null"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/lloInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtBirthDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Birth Day" />

        <EditText
            android:id="@+id/edtDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Gender" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="0px"
            android:layout_marginRight="550px"
            android:layout_marginBottom="0px"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rdMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px"
                android:layout_weight="1"
                android:maxHeight="14sp"
                android:minHeight="14sp"
                android:text="Nam"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rdFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px"
                android:layout_weight="1"
                android:maxHeight="14sp"
                android:minHeight="14sp"
                android:text="Ná»¯"
                android:textSize="14sp" />

        </RadioGroup>

        <EditText
            android:id="@+id/edtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Province" />

        <EditText
            android:id="@+id/edtProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="Education Level" />

        <EditText
            android:id="@+id/edtEducationLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lloPassField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="10px"
            android:text="Old Password" />

        <EditText
            android:id="@+id/edtOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:ems="10"
            android:inputType="textPassword"
            android:maxHeight="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="10px"
            android:text="New Password" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="10px"
            android:text="Confirm New Password" />

        <EditText
            android:id="@+id/edtConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lloTwoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Edit Info"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Change Password"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lloButtonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSaveInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Save" />

        <Button
            android:id="@+id/btnCancelEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lloButtonChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginBottom="20px"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnConfirmChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Confirm" />

        <Button
            android:id="@+id/btnCancelChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:backgroundTint="#B8C3E0"
            android:text="Cancel" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:text="Post History"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/listViewHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px" />

</LinearLayout>